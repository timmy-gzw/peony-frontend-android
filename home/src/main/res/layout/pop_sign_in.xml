<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20"
    tools:background="#88000000">

    <ImageView
        android:id="@+id/iv_yy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/peony_qd_bbg_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="0dp"
        android:background="@drawable/peony_qd_top_img"
        app:layout_constraintDimensionRatio="w,1:1.08"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:src="@drawable/peony_hb_gb_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_top"
        app:layout_constraintEnd_toEndOf="@id/iv_top"
        app:layout_constraintTop_toTopOf="@id/iv_top" />

    <View
        android:id="@+id/mid_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@id/sign_recy"
        app:layout_constraintTop_toBottomOf="@id/iv_top" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sign_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/peony_qd_bg_img"
        android:overScrollMode="never"
        android:padding="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@id/mid_view" />

    <ImageView
        android:id="@+id/l_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@drawable/peony_qd_h_icon"
        app:layout_constraintBottom_toBottomOf="@id/mid_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mid_view" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_14"
        android:src="@drawable/peony_qd_h_icon"
        app:layout_constraintBottom_toBottomOf="@id/l_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/l_iv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_recy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_25"
        app:layout_constraintBottom_toTopOf="@id/l_iv"
        app:layout_constraintDimensionRatio="w,1:4.25" />

</androidx.constraintlayout.widget.ConstraintLayout>
