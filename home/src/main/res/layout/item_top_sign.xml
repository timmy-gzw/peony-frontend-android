<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.tftechsz.home.entity.SignInBean.SignTopBean" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_top_sign_item_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:padding='@{TextUtils.equals(item.type ,"coin") ? (int)@dimen/dp_0 : (int)@dimen/dp_3}'
            android:src='@{TextUtils.equals(item.type ,"coin") ? @drawable/peony_qd_wqd_icon : (TextUtils.equals(item.type ,"vip") ? @drawable/default_mine_member_icon_bg : @drawable/peony_ltk02_icon_drawable)}'
            app:layout_constraintBottom_toTopOf="@id/msg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg"
            app:layout_constraintVertical_chainStyle="packed"
            tools:src="@drawable/peony_qd_wqd_icon" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:text="@{item.title}"
            android:textColor="#fff39c00"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon"
            tools:text="金币+20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_sign_item_right_top"
            android:text="@{item.tips}"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:textSize="12sp"
            android:visibility="@{TextUtils.isEmpty(item.tips) ? View.GONE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="@id/bg"
            app:layout_constraintTop_toTopOf="@id/bg"
            tools:text="2小时" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
