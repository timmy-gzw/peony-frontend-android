<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_close"
        android:layout_gravity="right"
         />


    <TextView
        android:id="@+id/tv_0"
        android:text="已保存至相册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_mid_font"
        android:textSize="@dimen/dp_22"
        android:textStyle="bold"
        android:layout_gravity="center" />




    <TextView
        android:id="@+id/tv_1"
        android:text="到微信朋友圈上传照片或视频分享给好友后，好友下载并注册芍药，填写你的邀请码，你可获得现金红包。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/gray"
        android:textSize="@dimen/dp_17"
         />


    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:visibility="visible"
        android:background="@drawable/bg_circle_shape3"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <ImageView
            android:id="@+id/iv_wx"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_share_wx_zone"
             />


        <TextView
            android:id="@+id/tv1"
            android:text="继续分享到微信朋友圈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_80000000"
            android:textSize="@dimen/dp_22"
            android:textStyle="bold"
            />


    </LinearLayout>


</LinearLayout>
