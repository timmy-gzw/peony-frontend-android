<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_35"
    android:layout_marginEnd="@dimen/dp_35"
    android:background="@drawable/bg_white"
    android:paddingBottom="@dimen/dp_10">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_12"
        android:src="@mipmap/ic_close"

        />


    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="已保存至相册"
            android:textColor="@color/color_normal"
            android:layout_marginStart="@dimen/dp_6"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"

            />

    </FrameLayout>


    <TextView

        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_25"
        android:gravity="center"
        android:text="到微信朋友圈上传照片或视频分享给好友后，好友下载并注册芍药，填写你的邀请码，你可获得现金红包。"
        android:textColor="@color/color_mid_font"
        android:textSize="@dimen/sp_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_margin="@dimen/dp_20"
        android:gravity="center"
        android:background="@drawable/bg_orange_enable"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_share_wx_zone_second"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续分享到微信朋友圈"
            android:textColor="@color/color_normal"
            android:layout_marginStart="@dimen/dp_7"
            android:textSize="@dimen/sp_18"

            />

    </LinearLayout>

</RelativeLayout>
