<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.BeforeReportActivity">

    <RelativeLayout
        android:id="@+id/base_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/toolbar_back_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="请选择举报原因"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:enabled="false"
            android:background="@drawable/sel_login_btn"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:layout_height="0.1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_24"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/report_check_off"
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="0dp"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:text="诈骗欺诈"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item1"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/report_check_off"
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="0dp"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:text="恶意骚扰"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_24"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item2"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/report_check_off"
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="0dp"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:text="色情信息"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item3"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/report_check_off"
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="0dp"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:text="性别不符"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_24"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item4"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/report_check_off"
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="0dp"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:text="垃圾广告"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item5"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/report_check_off"
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="0dp"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:text="其他"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>