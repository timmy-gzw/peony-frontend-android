<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include layout="@layout/tool_bar" />


    <com.flyco.tablayout.SlidingScaleTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_tool_bar"
        app:layout_constraintWidth_percent="0.5"
        app:tl_divider_padding="@dimen/dp_6"
        app:tl_indicator_color="@color/orange"
        app:tl_indicator_corner_radius="@dimen/dp_2"
        app:tl_indicator_height="@dimen/dp_2"
        app:tl_indicator_width="@dimen/dp_40"
        app:tl_tab_padding="@dimen/dp_2"
        app:tl_tab_space_equal="true"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="@color/color_normal"
        app:tl_textSelectSize="@dimen/sp_18"
        app:tl_textUnSelectColor="@color/color_normal"
        app:tl_textUnSelectSize="@dimen/sp_15"
        app:tl_underline_gravity="BOTTOM" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_color"
        android:paddingTop="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>