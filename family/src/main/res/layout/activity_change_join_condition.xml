<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">


    <RelativeLayout
        android:id="@+id/base_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/toolbar_back_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="更改家族加入条件"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_family_leader"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="提交"
            android:textColor="#79650A"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_tool_bar"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_every_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@+id/base_tool_bar"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_20"
            android:text="允许任何人申请加入"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@color/EEEEEE" />

        <TextView
            android:id="@+id/tv_all_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@id/tv_every_user"
            android:background="@drawable/bg_white"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_20"
            android:text="无须审核自动加入"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_custom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center_vertical"
            android:text="自定义条件申请加入"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:id="@+id/ll_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_boy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/bg_white_driver">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginStart="@dimen/dp_28"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:text="男性财富等级最低"
                    android:textColor="@color/color_light_font"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_boy_level"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:layout_toStartOf="@+id/iv_arrow"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/color_normal"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@mipmap/ic_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_girl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/bg_white_driver">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginStart="@dimen/dp_28"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:text="女性魅力等级最低"
                    android:textColor="@color/color_light_font"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_girl_level"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:layout_toStartOf="@+id/iv_arrow1"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/color_normal"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@mipmap/ic_arrow" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_custom_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/bg_white"
                app:drawableStartCompat="@mipmap/family_ic_check_normal"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:text="满足条件后自动加入"
                android:textColor="@color/color_normal"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>