<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/base_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:paddingEnd="@dimen/dp_12">

        <ImageView
            android:id="@+id/toolbar_back_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:src="@mipmap/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="家族广场"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/create_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@drawable/bg_orange_radius100"
            android:paddingHorizontal="@dimen/dp_13"
            android:paddingVertical="@dimen/dp_5"
            android:text="创建家族"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:padding="@dimen/dp_7"
            android:src="@mipmap/ic_search"
            android:transitionName="family_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/create_family"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_normal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/base_tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_tool_bar">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleGravity="right"
                app:contentScrim="@color/white"
                app:expandedTitleGravity="center"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll">

                    <!--  <ImageView
                          android:id="@+id/create_family"
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_margin="@dimen/dp_10"
                          android:src="@mipmap/peony_jzgc_cjjz_img"
                          android:visibility="visible"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintDimensionRatio="2.86:1"
                          app:layout_constraintTop_toTopOf="parent"
                          tools:visibility="gone" />-->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_leader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@color/white"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:paddingVertical="@dimen/dp_10"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_70"
                            android:src="@mipmap/mine_ic_girl_default"
                            app:layout_constraintBottom_toBottomOf="@id/tv_desc"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/cl_name" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_name"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            app:layout_constraintEnd_toStartOf="@id/enter_chat"
                            app:layout_constraintStart_toEndOf="@id/iv_avatar"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:singleLine="true"
                                android:textColor="@color/color_normal"
                                android:textSize="@dimen/sp_16"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintEnd_toStartOf="@id/rl_level"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed"
                                tools:text="喵了个咪儿" />

                            <RelativeLayout
                                android:id="@+id/rl_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/tv_name"
                                app:layout_constraintTop_toTopOf="@id/tv_name">

                                <ImageView
                                    android:id="@+id/iv_level"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_26"
                                    android:layout_centerHorizontal="true" />

                                <TextView
                                    android:id="@+id/tv_level"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp_26"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:text="10"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_9" />

                            </RelativeLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/tv_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/bg_family_num"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/dp_5"
                            android:paddingVertical="@dimen/dp_2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_10"
                            app:layout_constraintStart_toStartOf="@id/cl_name"
                            app:layout_constraintTop_toBottomOf="@id/cl_name"
                            tools:text="15人" />

                        <TextView
                            android:id="@+id/tv_prestige"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_4"
                            android:background="@drawable/bg_family_prestige"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/dp_5"
                            android:paddingVertical="@dimen/dp_2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_10"
                            app:layout_constraintBottom_toBottomOf="@id/tv_number"
                            app:layout_constraintStart_toEndOf="@id/tv_number"
                            app:layout_constraintTop_toTopOf="@id/tv_number"
                            tools:text="威望100W" />

                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:ellipsize="end"
                            android:paddingEnd="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintEnd_toStartOf="@id/enter_chat"
                            app:layout_constraintStart_toStartOf="@id/cl_name"
                            app:layout_constraintTop_toBottomOf="@id/tv_number"
                            tools:text="料很小分队启动，美女请进，男士请撩" />

                        <TextView
                            android:id="@+id/enter_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_orange_radius100"
                            android:paddingHorizontal="@dimen/dp_11"
                            android:paddingVertical="@dimen/dp_9"
                            android:text="进群聊天"
                            android:textColor="@color/color_normal"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <com.flyco.tablayout.SlidingScaleTabLayout
                android:id="@+id/tabLayout"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintEnd_toStartOf="@id/iv_wx"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tl_divider_padding="@dimen/dp_6"
                app:tl_indicator_color="@color/colorPrimary"
                app:tl_indicator_corner_radius="@dimen/dp_100"
                app:tl_indicator_height="@dimen/dp_2"
                app:tl_indicator_margin_bottom="@dimen/dp_3"
                app:tl_indicator_width="@dimen/dp_10"
                app:tl_tab_padding="@dimen/dp_10"
                app:tl_tab_vertical_gravity="Center"
                app:tl_textBold="SELECT"
                app:tl_textSelectColor="@color/color_normal"
                app:tl_textSelectSize="@dimen/sp_18"
                app:tl_textUnSelectColor="@color/color_mid_font"
                app:tl_textUnSelectSize="@dimen/sp_15"
                app:tl_underline_gravity="BOTTOM" />

            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/text_size_20"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:src="@mipmap/family_ic_qq"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tabLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tabLayout"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_round"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_9"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/dp_8"
                android:background="@drawable/bg_dot_red"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/iv_wx"
                app:layout_constraintTop_toTopOf="@id/iv_wx"
                tools:visibility="visible" />

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:banner_indicator_gravity="center"
                app:banner_indicator_height="4dp"
                app:banner_indicator_marginBottom="@dimen/dp_10"
                app:banner_indicator_normal_color="@color/white_alpha_20"
                app:banner_indicator_normal_width="4dp"
                app:banner_indicator_radius="@dimen/dp_100"
                app:banner_indicator_selected_color="@color/white"
                app:banner_indicator_selected_width="@dimen/dp_10"
                app:layout_constraintDimensionRatio="4.6875"
                app:layout_constraintTop_toBottomOf="@id/tabLayout"
                tools:visibility="visible" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_1"
                android:overScrollMode="never"
                app:layout_constraintBottom_toTopOf="@+id/rl_bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/banner" />

            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tv_enter_chat"
                    style="@style/CustomButton"
                    android:background="@drawable/bg_orange_enable"
                    android:text="进入聊天室" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_family_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_130"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <View
            android:id="@+id/center_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/shape_recruit_hover"
            app:layout_constraintBottom_toBottomOf="@id/lottie"
            app:layout_constraintEnd_toEndOf="@id/lottie"
            app:layout_constraintStart_toStartOf="@id/lottie"
            app:layout_constraintTop_toTopOf="@id/lottie" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_110"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="-10dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="hongbao.zip"
            app:lottie_imageAssetsFolder="gift/"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/red_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@drawable/shape_recruit_txt"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_9"
            app:layout_constraintBottom_toBottomOf="@id/center_view"
            app:layout_constraintEnd_toEndOf="@id/center_view"
            app:layout_constraintStart_toStartOf="@id/center_view"
            tools:text="30个红包\n待领取" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
