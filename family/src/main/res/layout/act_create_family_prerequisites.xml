<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isReal"
            type="Boolean" />

        <variable
            name="isSelf"
            type="Boolean" />

        <variable
            name="isNext"
            type="Boolean" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <include layout="@layout/tool_bar" />

            <View
                android:id="@+id/view_top"
                style="@style/Driver"
                android:layout_height="@dimen/dp_6"
                android:background="@color/bg_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/base_tool_bar" />

            <TextView
                android:id="@+id/tv_title_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_15"
                android:paddingStart="@dimen/dp_20"
                android:text="家族福利"
                android:textColor="@color/color_normal"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_top" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f9f9f9"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@id/tv_title_top" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/bg_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recy" />

            <TextView
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_15"
                android:text="创建要求"
                android:textColor="@color/color_normal"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <RelativeLayout
                android:id="@+id/rl_is_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_gray_radius10"
                android:minHeight="@dimen/dp_60"
                android:padding="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="@id/hint"
                app:layout_constraintTop_toBottomOf="@id/hint">

                <ImageView
                    android:id="@+id/iv_is_self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:alpha='@{isReal ? 0.4f:1f }'
                    android:background="@mipmap/minedetails_bg1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_toEndOf="@+id/iv_is_self"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_is_real"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text='@{isReal ? "已真人认证" : "未真人认证" }'
                        android:textColor='@{isReal ? @color/color_light_font : @color/color_normal }'
                        android:textSize="@dimen/sp_15" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_real_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background='@{isReal ? @drawable/bg_gray_radius4 : @drawable/bg_while_15cor}'
                    android:paddingStart="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_7"
                    android:text='@{isReal ? "√ 已认证" : "去认证" }'
                    android:textColor='@{isReal ? @color/color_light_font : @color/color_normal}'
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_is_real"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/bg_gray_radius10"
                android:minHeight="@dimen/dp_60"
                android:padding="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_is_self">

                <ImageView

                    android:id="@+id/iv_is_real"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:alpha='@{isSelf ? 0.4f:1f }'
                    android:background="@mipmap/minedetails_bg2" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_toEndOf="@+id/iv_is_real"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_is_self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text='@{isSelf ? "已实名认证" : "未实名认证" }'
                        android:textColor='@{isSelf ? @color/color_light_font : @color/color_normal }'
                        android:textSize="@dimen/sp_15" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_self_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background='@{isSelf ? @drawable/bg_gray_radius4 : @drawable/bg_while_15cor}'
                    android:paddingStart="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_7"
                    android:text='@{isSelf ? "√ 已认证" : "去认证" }'
                    android:textColor='@{isSelf ? @color/color_light_font : @color/color_normal}'
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/bg_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_is_real" />


            <TextView
                android:id="@+id/tv_next"
                style="@style/CustomButton"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@{isNext ? @drawable/bg_orange_enable : @drawable/bg_eee_radius100}"
                android:enabled="@{isNext}"
                android:text="下一步"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_is_real" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>