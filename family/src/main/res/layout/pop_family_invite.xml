<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/dp_size_20"
    android:background="@drawable/bg_white"
    android:paddingBottom="@dimen/dp_20">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@color/red"
        app:layout_constraintBottom_toTopOf="@id/tips"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius_top_left="@dimen/dp_10"
        app:riv_corner_radius_top_right="@dimen/dp_10" />

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:scaleType="centerInside"
        android:src="@drawable/ic_invite_pop_del"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_25"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="26dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_record"
            app:layout_constraintBottom_toTopOf="@id/tc_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:riv_corner_radius="6dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:singleLine="true"
            android:text="望不见山高流水"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintTop_toTopOf="@id/iv_icon" />

        <TextView
            android:id="@+id/tv_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_7"
            android:background="@drawable/shape_invite_people"
            android:gravity="center"
            android:text="10人"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:id="@+id/rl_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_people"
            app:layout_constraintStart_toEndOf="@+id/tv_people"
            app:layout_constraintTop_toTopOf="@id/tv_people">

            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_26"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_26"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_9"
                tools:text="10" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tc_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:alpha="0.6"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="我总是会笑着看着你，笑着看着你，笑着笑着看着你，看着你，笑着看着你，情意轻易的洋溢眼底，帅哥美女一起来吧！" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingHorizontal="@dimen/dp_20"
        android:textColor="#F6AF10"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_cons"
        tools:text="进来聊聊吧，可以上麦聊天，还有红包领取～" />

    <TextView
        android:id="@+id/tv_accept"
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_48"
        android:background="@drawable/bg_orange_enable"
        android:text="立即加入"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tips" />


</androidx.constraintlayout.widget.ConstraintLayout>