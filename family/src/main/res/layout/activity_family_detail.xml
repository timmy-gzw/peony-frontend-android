<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/rl_bottom"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_290"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_mask_family"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop" />

                </FrameLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/trans_black_80" />

                <RelativeLayout
                    android:id="@+id/base_tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/toolbar_back_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_10"
                        android:src="@mipmap/ic_back"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tv_family_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_family_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_family_name"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="false"
                        android:alpha="0.6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_17"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_apply_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_dot_red1"
                            android:gravity="center"
                            android:minWidth="@dimen/dp_18"
                            android:minHeight="@dimen/dp_18"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_10"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/toolbar_iv_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/family_icon_setting"
                            tools:ignore="UseAppTint" />
                    </LinearLayout>
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/rl_progress"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_below="@+id/base_tool_bar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <com.tftechsz.common.widget.CircleImageView
                        android:id="@+id/cl_family"
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="86dp"
                        android:layout_gravity="center"
                        app:civ_border_color="@color/color_F8D423"
                        app:civ_border_width="@dimen/dp_2" />

                </FrameLayout>


                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_below="@+id/rl_progress"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-30dp" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_below="@+id/rl_progress"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-30dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold"
                    tools:text="10" />


                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_below="@+id/rl_progress"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:background="@drawable/bg_half_tran80"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="我总是会笑着看着你，情意轻易的洋溢眼底…"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:visibility="invisible"
                    app:drawableEndCompat="@mipmap/ic_arrow" />


                <ImageView
                    android:id="@+id/iv_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_sign_in"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_top"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_top">

                <ImageView
                    android:id="@+id/iv_level_small"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerHorizontal="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:background="@mipmap/family_icon_default_avatar" />

                <TextView
                    android:id="@+id/tv_level_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_9"
                    app:layout_constraintBottom_toBottomOf="@id/iv_level_small"
                    app:layout_constraintEnd_toEndOf="@id/iv_level_small"
                    app:layout_constraintStart_toStartOf="@id/iv_level_small"
                    app:layout_constraintTop_toTopOf="@id/iv_level_small"
                    tools:text="10" />

                <TextView
                    android:id="@+id/tv_level1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/iv_level_small"
                    app:layout_constraintStart_toEndOf="@id/iv_level_small"
                    app:layout_constraintTop_toTopOf="@id/iv_level_small"
                    tools:text="132" />

                <TextView
                    android:id="@+id/tv_prestige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:textColor="@color/color_mid_font"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/iv_level_small"
                    app:layout_constraintStart_toEndOf="@+id/tv_level1"
                    app:layout_constraintTop_toTopOf="@id/iv_level_small"
                    tools:text="asfasfas" />

                <ImageView
                    android:id="@+id/iv_prestige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:src="@mipmap/family_icon_tip"
                    app:layout_constraintBottom_toBottomOf="@id/iv_level_small"
                    app:layout_constraintStart_toEndOf="@+id/tv_prestige"
                    app:layout_constraintTop_toTopOf="@id/iv_level_small" />

                <TextView
                    android:id="@+id/tv_end_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:textColor="@color/color_mid_font"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/iv_level_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_level_small"
                    tools:text="LV100" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_weight="1"
                    android:max="100"
                    android:minHeight="@dimen/dp_18"
                    android:progressDrawable="@drawable/progress_drawable_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_level_small"
                    tools:progress="50" />

                <TextView
                    android:id="@+id/tv_level_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="132"
                    android:textColor="@color/color_light_font"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progress_bar" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_prestige"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/white"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_level">

                <View
                    android:id="@+id/mid_line"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/driver"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/iv_week_prestige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/family_ic_week_prestige"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_week_prestige"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_week_prestige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_3"
                    android:text="周威望"
                    android:textColor="@color/color_normal"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toTopOf="@id/tv_week_rank"
                    app:layout_constraintEnd_toStartOf="@id/mid_line"
                    app:layout_constraintStart_toEndOf="@id/iv_week_prestige"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_week_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_white_radius15"
                    android:textColor="@color/color_light_font"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_week_prestige"
                    app:layout_constraintTop_toBottomOf="@id/tv_week_prestige"
                    tools:text="第一" />

                <ImageView
                    android:id="@+id/iv_total_prestige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/family_ic_total_prestige"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_total_prestige"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/mid_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_total_prestige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_3"
                    android:text="总威望"
                    android:textColor="@color/color_normal"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toTopOf="@id/tv_total_rank"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_total_prestige"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_total_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_white_radius15"
                    android:textColor="@color/color_light_font"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_total_prestige"
                    app:layout_constraintTop_toBottomOf="@id/tv_total_prestige"
                    tools:text="第一" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/rl_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_prestige">

                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="家族成员"
                    android:textColor="@color/color_mid_font"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_member_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/tv_member"
                    android:textColor="@color/color_light_font"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/iv_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_toEndOf="@+id/tv_member_number"
                    android:src="@mipmap/family_icon_tip"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_look_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center"
                    android:text="查看全部成员"
                    android:textColor="@color/color_light_font"
                    android:textSize="@dimen/sp_12"
                    app:drawableEndCompat="@mipmap/ic_arrow"
                    app:layout_constraintEnd_toEndOf="parent" />


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:overScrollMode="never"
                android:paddingStart="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_member" />

            <TextView
                android:id="@+id/tv_announcement_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:text="家族公告"
                android:textColor="@color/color_mid_font"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_member" />


            <TextView
                android:id="@+id/tv_announcement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20"
                android:textColor="@color/color_mid_font"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_announcement_title" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@color/driver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_announcement" />


            <com.tftechsz.common.widget.CommonItemView
                android:id="@+id/item_notify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:left_text_content="消息免打扰"
                app:right_arrow_visible="false"
                app:right_switch_visible="true"
                app:right_text_visible="true" />

            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingVertical="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:text="家族任务"
                android:textColor="@color/color_mid_font"
                android:textSize="@dimen/sp_16"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_notify"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_all_task"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/dp_20"
                android:drawableEnd="@mipmap/ic_arrow"
                android:gravity="center"
                android:text="查看全部任务"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_task_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_task_title"
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:paddingBottom="@dimen/dp_6"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_task_title"
                tools:visibility="visible" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:padding="@dimen/dp_6"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_enter_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_family_share"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                style="@style/CustomButton"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dp_0"
                android:background="@color/transparent"
                android:drawableStart="@mipmap/peony_jzzy_yqhy_icon"
                android:drawablePadding="@dimen/dp_3"
                android:text="邀请好友"
                android:textSize="@dimen/sp_15" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_enter_chat"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_enter_chat"
                style="@style/CustomButton"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dp_0"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/dp_3"
                android:textSize="@dimen/sp_15"
                tools:drawableStart="@mipmap/peony_jzzy_lts_icon"
                tools:text="进入聊天室" />
        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
