<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/sv_pk_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:scaleType="fitCenter"
        app:autoPlay="true"
        app:clearsAfterStop="true" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@drawable/bg_black_tran60_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="- 恭喜红队获得胜利 -"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pk_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/bg_gray_radius25"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/bg_orange_enable"
            android:gravity="center"
            android:text="炫耀一下"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

</LinearLayout>