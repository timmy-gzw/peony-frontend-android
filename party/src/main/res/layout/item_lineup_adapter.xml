<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_66">


    <TextView
        android:id="@+id/tv_number_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:textColor="#ffcccccc"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <ImageView
        android:id="@+id/img_ipm"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_46"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/img_ipm"
        app:layout_constraintLeft_toRightOf="@id/img_ipm"
        app:layout_constraintTop_toBottomOf="@id/tv_ipm_name"
        app:layout_constraintVertical_chainStyle="packed"
        tools:background="@drawable/bg_girl"
        tools:drawablePadding="@dimen/dp_2"
        tools:drawableStart="@drawable/ic_girl"
        tools:paddingHorizontal="@dimen/dp_4"
        tools:text="15"
        tools:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_ipm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff6508d"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/iv_sex"
        app:layout_constraintLeft_toLeftOf="@id/iv_sex"
        app:layout_constraintTop_toTopOf="@id/img_ipm"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="仆仆" />

    <TextView
        android:id="@+id/tv_click_up_sequence"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/bg_ff_radius20_border_ee"
        android:gravity="center"
        android:text="抱上麦序"
        android:textSize="@dimen/sp_12"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/color_333333"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_click_cancel_sequence"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/solid_fc5858_nor20"
        android:gravity="center"
        android:text="取消上麦"
        android:textColor="#FC5858"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>