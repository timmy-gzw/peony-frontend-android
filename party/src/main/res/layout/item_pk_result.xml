<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_avatar"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64">

        <com.tftechsz.common.widget.CircleImageView
            android:id="@+id/iv_user"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/party_ic_seat" />


        <TextView
            android:id="@+id/tv_chat_love"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_white_radius8"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_5"
            android:text="0"
            android:textColor="#99F6508D"
            android:textSize="@dimen/sp_9"
            app:drawableStartCompat="@drawable/party_ic_love"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_mvp"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_margin="@dimen/dp_5"
            android:src="@drawable/party_pk_mvp"
            android:visibility="invisible" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />
</LinearLayout>
