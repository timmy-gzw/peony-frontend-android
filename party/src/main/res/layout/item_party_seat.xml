<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_avatar"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true">

        <com.tftechsz.common.widget.CircleImageView
            android:id="@+id/iv_user"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/party_ic_seat" />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:layout_centerInParent="true"
            android:background="@drawable/party_ic_blue_round"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/circle1"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:layout_centerInParent="true"
            android:background="@drawable/party_ic_blue_round"
            android:visibility="invisible" />

        <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/svga_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:autoPlay="true"
            app:clearsAfterStop="true" />

        <ImageView
            android:id="@+id/iv_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@drawable/vip_style_picture_frame_s02_round" />


        <ImageView
            android:id="@+id/iv_mute_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp_11"
            android:scaleType="centerCrop"
            android:src="@drawable/party_ic_voice_seat_close" />

        <TextView
            android:id="@+id/tv_chat_love"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_white_radius8"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_5"
            android:text="0"
            android:textColor="#99F6508D"
            android:textSize="@dimen/sp_9"
            app:drawableStartCompat="@drawable/party_ic_love"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_big_emotion"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />


</RelativeLayout>
