<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="has_data"
            type="boolean" />

        <variable
            name="is_edit"
            type="boolean" />

        <variable
            name="showProgress"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_492"
        android:background="@drawable/bg_white_top_radius10"
        android:transitionName="music">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_10"
            android:text="播放列表"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_light_font" />

        <TextView
            android:id="@+id/title_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:textColor="@color/color_light_font"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintStart_toEndOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/title"
            tools:text="（共6首）" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:gravity="center"
            android:background="@drawable/shape_bg_f9f9f9_radius"
            android:text="!"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintStart_toEndOf="@id/title_num"
            android:textColor="@color/color_999999"
            app:layout_constraintTop_toTopOf="@id/title" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:animateLayoutChanges="true"
            android:padding="@dimen/dp_10"
            android:src="@drawable/music_add"
            android:visibility="@{!has_data || is_edit ? View.GONE : View.VISIBLE}"
            app:drawableStartCompat="@drawable/party_add_music"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="@dimen/dp_10"
            android:src="@drawable/music_edit"
            android:visibility="@{!has_data || is_edit ? View.GONE : View.VISIBLE}"
            app:drawableStartCompat="@drawable/party_add_music"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toStartOf="@id/iv_add"
            app:layout_constraintTop_toTopOf="@id/title"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/edit_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:animateLayoutChanges="true"
            android:background="@drawable/bg_orange_radius"
            android:paddingHorizontal="@dimen/dp_13"
            android:paddingVertical="@dimen/dp_6"
            android:text="完成"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_12"
            android:visibility="@{is_edit ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/iv_edit"
            app:layout_constraintEnd_toStartOf="@id/iv_edit"
            app:layout_constraintTop_toTopOf="@id/iv_edit" />

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/btn_scan"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:srlEnableLoadMore="false">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/play_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_110"
            android:animateLayoutChanges="true"
            android:visibility="@{has_data &amp;&amp; !is_edit  ?  View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/EEEEEE"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical|end"
                android:minWidth="@dimen/dp_30"
                android:textColor="@color/color_light_font"
                android:textSize="@dimen/sp_10"
                android:visibility="@{showProgress ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="01:08" />

            <TextView
                android:id="@+id/time_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical|start"
                android:minWidth="@dimen/dp_30"
                android:textColor="@color/color_light_font"
                android:textSize="@dimen/sp_10"
                android:visibility="@{showProgress ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="11:08" />

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:maxHeight="@dimen/dp_3"
                android:minHeight="@dimen/dp_3"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:progressDrawable="@drawable/music_seekbar_progress"
                android:thumb="@drawable/shape_music_seekbar_black_radius"
                android:visibility="@{showProgress ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="@id/time_progress"
                app:layout_constraintEnd_toStartOf="@id/time_max"
                app:layout_constraintStart_toEndOf="@id/time_progress"
                app:layout_constraintTop_toTopOf="@id/time_progress"
                tools:progress="30"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/music_state_play"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:src="@drawable/music_state_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_progress" />

            <ImageView
                android:id="@+id/music_state_next"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginStart="@dimen/dp_29"
                android:src="@drawable/music_state_next"
                app:layout_constraintBottom_toBottomOf="@id/music_state_play"
                app:layout_constraintStart_toEndOf="@id/music_state_play"
                app:layout_constraintTop_toTopOf="@id/music_state_play" />

            <ImageView
                android:id="@+id/music_state_prev"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_29"
                android:src="@drawable/music_state_prev"
                app:layout_constraintBottom_toBottomOf="@id/music_state_play"
                app:layout_constraintEnd_toStartOf="@id/music_state_play"
                app:layout_constraintTop_toTopOf="@id/music_state_play" />

            <ImageView
                android:id="@+id/music_status_loop"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/music_loop"
                app:layout_constraintBottom_toBottomOf="@id/music_state_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/music_state_play" />

            <ImageView
                android:id="@+id/music_volume"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/music_volume"
                app:layout_constraintBottom_toBottomOf="@id/music_state_play"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/music_state_play" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_scan"
            style="@style/CustomButton"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="扫描本地"
            android:visibility="@{has_data ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@id/play_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>