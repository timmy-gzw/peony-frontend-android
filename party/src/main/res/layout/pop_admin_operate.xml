<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_36"
    android:background="@drawable/bg_white_radius20"
    android:paddingHorizontal="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20">

    <com.tftechsz.common.widget.CommonFrameView
        android:id="@+id/cf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text_content="选择你要进行的操作" />


    <TextView
        android:id="@+id/tv_on_seat"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_49"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/party_ic_admin_on_seat"
        android:gravity="center"
        android:text="上麦"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cf_title"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_lock_seat"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_49"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/party_ic_admin_lock_seat"
        android:gravity="center"
        android:text="锁定麦位"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cf_title"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_lock_seat1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_orange_radius25"
        android:gravity="center"
        android:text="锁定麦位"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_15"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cf_title"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/CustomButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="0dp"
        android:background="@drawable/bg_gray_radius25"
        android:text="取消"
        android:textColor="@color/color_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_on_seat"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
