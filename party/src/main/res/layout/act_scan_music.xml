<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="is_scan"
            type="boolean" />

        <variable
            name="has_selected"
            type="boolean" />

        <variable
            name="hase_data"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:transitionName="music">

        <include
            layout="@layout/tool_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/rl_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@drawable/shape_bg_f9f9f9_radius"
            android:visibility="@{is_scan || !hase_data ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/base_tool_bar"
            tools:visibility="visible">

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/edit_del"
                android:background="@null"
                android:drawableStart="@drawable/party_search"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:hint="请输入歌曲名称"
                android:importantForAutofill="no"
                android:maxLength="10"
                android:paddingHorizontal="@dimen/dp_15"
                android:singleLine="true"
                android:textColor="@color/color_normal"
                android:textColorHint="@color/color_light_font"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/edit_del"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:scaleType="center"
                android:src="@drawable/iv_del"
                android:visibility="invisible"
                tools:visibility="visible" />
        </RelativeLayout>

        <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
            android:id="@+id/trl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="@{is_scan ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_edt"
            app:tr_pureScrollMode_on="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="vertical" />

        </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

        <TextView
            android:id="@+id/btn"
            style="@style/CustomButton"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:alpha="0.95"
            android:animateLayoutChanges="true"
            android:text="导入音乐"
            android:visibility="@{is_scan || !has_selected ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/search_lottie"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_height="@dimen/dp_0"
            android:visibility="@{is_scan ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="music_search.zip"
            app:lottie_loop="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>