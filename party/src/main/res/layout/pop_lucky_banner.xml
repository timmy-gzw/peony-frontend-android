<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_plb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="房间禁言"
        android:textColor="#ff333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_plb_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_plb_title"
        android:background="#F9F9F9"
        android:paddingStart="20dp"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="请选择禁言时间"
        android:textColor="#ff999999"
        android:textSize="14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rel_party_lucky_ranking_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@id/tv_plb_content"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_49"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:background="@drawable/bg_orange_raduis60"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_15" />

</RelativeLayout>