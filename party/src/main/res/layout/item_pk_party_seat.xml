<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_avatar"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/circle"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center"
                android:background="@drawable/party_ic_red_round"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center"
                android:background="@drawable/party_ic_red_round"
                android:visibility="invisible" />

            <com.tftechsz.common.widget.CircleImageView
                android:id="@+id/iv_user"
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_47"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/svga_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:autoPlay="true"
            app:clearsAfterStop="true" />

        <ImageView
            android:id="@+id/iv_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@drawable/vip_style_picture_frame_s02_round" />

        <ImageView
            android:id="@+id/iv_mute_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@drawable/party_ic_voice_seat_close" />

        <TextView
            android:id="@+id/tv_chat_love"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/bg_white_radius8"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_5"
            android:text="0"
            android:textColor="#99F6508D"
            android:textSize="@dimen/sp_9"
            app:drawableStartCompat="@drawable/party_ic_love"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_mvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/party_pk_mvp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_big_emotion"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />

</LinearLayout>
