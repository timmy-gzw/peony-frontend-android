<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_top"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_pas_alg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="派对公告"
        android:textColor="#ff333333"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_save_pas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_20"
        android:text="保存"
        android:textColor="#ff7f89f3"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_pas_alg1"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_click_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:text="取消"
        android:textColor="#ff999999"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_pas_alg1"
        app:layout_constraintRight_toLeftOf="@id/tv_save_pas" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_radius10"
        android:gravity="center|start"
        android:hint="请填写标题…"
        android:maxLength="30"
        android:minHeight="@dimen/dp_42"
        android:padding="@dimen/dp_20"
        android:textColor="@color/color_normal"
        android:textColorHint="@color/color_mid_font"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_pas_alg1"
        app:layout_constraintTop_toBottomOf="@id/tv_pas_alg1" />

    <View
        android:id="@+id/view_alg2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@color/driver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_content" />

    <EditText
        android:id="@+id/et_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_radius10"
        android:gravity="center|start"
        android:hint="请填写公告内容..."
        android:maxHeight="@dimen/dp_200"
        android:minHeight="@dimen/dp_80"
        android:padding="@dimen/dp_20"
        android:textColor="@color/color_normal"
        android:textColorHint="@color/color_mid_font"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_alg2" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="1/1"
        android:textColor="@color/color_light_font"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_content2" />

</androidx.constraintlayout.widget.ConstraintLayout>