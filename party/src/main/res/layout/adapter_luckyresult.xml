<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_gift_adapter"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_al_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_gift_adapter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"
        android:shadowColor="#706aecf5"
        android:shadowRadius="3.0"
        android:textColor="#ff6aecf5"
        android:textSize="16sp" />

    <View
        android:id="@+id/view_al_line"
        android:layout_width="0.5dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#245febee" />
</RelativeLayout>