<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    tools:background="#171329">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_gift"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#3D3756"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardUseCompatPadding="false"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@drawable/chat_ic_gift"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#F2EFFF"
        android:textSize="@dimen/sp_12"
        app:autoSizeMinTextSize="@dimen/sp_8"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_gift"
        tools:text="红玫瑰" />

    <TextView
        android:id="@+id/tv_gift_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#F2EFFF"
        android:textSize="@dimen/sp_10"
        app:autoSizeMinTextSize="@dimen/sp_8"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_gift_name"
        tools:text="X100" />

</androidx.constraintlayout.widget.ConstraintLayout>