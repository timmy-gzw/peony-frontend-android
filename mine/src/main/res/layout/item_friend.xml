<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center_vertical">


    <com.netease.nim.uikit.common.ui.imageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_10"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="start">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="喵了个咪儿" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_3"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_vip"
                android:background="@mipmap/vip_icon_bg"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14"/>

            <TextView
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/dp_3"
                tools:background="@drawable/bg_girl"
                tools:drawablePadding="@dimen/dp_2"
                tools:drawableStart="@drawable/ic_girl"
                tools:text="15"
                tools:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/iv_real_people"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@mipmap/peony_home_xczr_icon"
                android:gravity="center" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/intimacy"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="6℃"
        android:textColor="#FE4D6B"
        android:layout_marginEnd="@dimen/dp_16"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:drawableRight="@mipmap/mine_ic_attention_selector"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/driver"
        android:layout_alignParentTop="true"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/driver"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
