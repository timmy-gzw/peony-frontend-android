<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cl_head"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/bg_white_radius10"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_size_45"
        android:paddingTop="@dimen/dp_60"
        android:paddingEnd="@dimen/dp_size_45"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_gray_radius"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="金币以上 的礼物就能轻松把他挤走"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_14" />


        <TextView
            style="@style/CustomButton"
            android:layout_marginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_0"
            android:layout_marginBottom="@dimen/dp_26"
            android:background="@drawable/bg_guard"
            android:text="取代他"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mine_bg_guard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/mine_ic_no_guard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.tftechsz.common.widget.CircleImageView
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_49"
            android:src="@mipmap/mine_bg_guard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>
