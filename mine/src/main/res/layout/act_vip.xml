<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="is_vip"
            type="boolean" />

        <variable
            name="vip_expiration_time"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{is_vip?  @drawable/bg_vip_top_bg : @drawable/bg_vip_nobg}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/bg_vip_top_bg">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_10"
                android:src="@mipmap/ic_back_radius" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                tools:text="title" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/xf"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/vip_cl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@{is_vip?  @drawable/bg_vip_top_bg :  @drawable/bg_vip_nobg}"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:background="@drawable/bg_vip_top_bg">

                    <View
                        android:id="@+id/cl_member_top_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:background="@{is_vip?  @drawable/act_member_top_bg_open : @drawable/act_member_top_bg_normal}"
                        app:layout_constraintDimensionRatio="h,4.2:1"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:background="@drawable/act_member_top_bg_normal" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginStart="@dimen/dp_20"
                        android:background="@drawable/shape_bg_f9f9f9_alpha40"
                        android:padding="@dimen/dp_2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_record"
                        app:layout_constraintBottom_toBottomOf="@id/cl_member_top_bg"
                        app:layout_constraintStart_toStartOf="@id/cl_member_top_bg"
                        app:layout_constraintTop_toTopOf="@id/cl_member_top_bg"
                        app:riv_corner_radius="@dimen/dp_100" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:textColor="@{is_vip ? @color/member_top_name_open : @color/member_top_name_nor}"
                        app:layout_constraintBottom_toTopOf="@id/hint"
                        app:layout_constraintStart_toEndOf="@id/icon"
                        app:layout_constraintTop_toTopOf="@id/icon"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="旎旎胆小鬼"
                        tools:textColor="@color/member_top_name_nor" />

                    <TextView
                        android:id="@+id/hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text='@{is_vip ? vip_expiration_time : "VIP会员未开通"}'
                        android:textColor="@{is_vip ? @color/member_top_hint_open : @color/member_top_hint_nor}"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/icon"
                        app:layout_constraintStart_toStartOf="@id/name"
                        app:layout_constraintTop_toBottomOf="@id/name"
                        tools:text="VIP会员未开通"
                        tools:textColor="@color/member_top_hint_nor" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:background="@drawable/vip_bg05_img"
                    android:visibility="@{is_vip ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="@id/t1"
                    app:layout_constraintStart_toStartOf="@id/t1"
                    app:layout_constraintTop_toTopOf="@id/t1" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_1"
                    android:text="VIP会员装扮"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="@{is_vip ? View.VISIBLE : View.GONE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vip_cl1" />

                <TextView
                    android:id="@+id/load_more"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center"
                    android:text="查看更多>"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    android:visibility="@{is_vip ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="@id/t1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/t1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/qp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_5"
                    android:visibility="@{is_vip ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toStartOf="@id/cl_frame"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/t1">

                    <FrameLayout
                        android:id="@+id/vip_bubble_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/vip_dress_up_bg"
                        app:layout_constraintDimensionRatio="w,1:2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/chat_bubble"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20"
                            android:text="聊天气泡"
                            android:textSize="@dimen/sp_13"
                            tools:background="@drawable/vip_style_chat_bubble_s01_end" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="聊天气泡"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/vip_bubble_bg"
                        app:layout_constraintStart_toStartOf="@id/vip_bubble_bg"
                        app:layout_constraintTop_toBottomOf="@id/vip_bubble_bg" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_frame"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:visibility="@{is_vip ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="@id/qp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/qp"
                    app:layout_constraintTop_toTopOf="@id/qp">

                    <FrameLayout
                        android:id="@+id/vip_frame_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/vip_dress_up_bg"
                        app:layout_constraintDimensionRatio="w,1:2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/user_icon"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:riv_corner_radius="@dimen/dp_100"
                            tools:src="@mipmap/default_mine_vip_bg_nor" />

                        <ImageView
                            android:id="@+id/pic_frame"
                            android:layout_width="@dimen/dp_68"
                            android:layout_height="@dimen/dp_68"
                            android:layout_gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:background="@drawable/vip_style_picture_frame_s02_round" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="头像框"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/vip_frame_bg"
                        app:layout_constraintStart_toStartOf="@id/vip_frame_bg"
                        app:layout_constraintTop_toBottomOf="@id/vip_frame_bg" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:background="@drawable/vip_bg05_img"
                    android:visibility="@{is_vip ? View.GONE : View.VISIBLE}"
                    app:layout_constraintEnd_toEndOf="@id/t2"
                    app:layout_constraintStart_toStartOf="@id/t2"
                    app:layout_constraintTop_toTopOf="@id/t2" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_1"
                    android:text="开通VIP会员"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="@{is_vip ? View.GONE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/qp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/price_recy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:overScrollMode="never"
                    android:paddingStart="@dimen/dp_14"
                    android:paddingEnd="@dimen/dp_14"
                    android:visibility="@{is_vip ? View.GONE : View.VISIBLE}"
                    app:layout_constraintTop_toBottomOf="@id/t2" />

                <TextView
                    android:id="@+id/vip_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:padding="@dimen/dp_5"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_10"
                    android:visibility="@{is_vip ? View.GONE : View.VISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price_recy"
                    tools:text="成为会员即表示同意会员协议" />

                <TextView
                    android:id="@+id/get_vip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:background="@drawable/shape_vip_price_bg_button"
                    android:gravity="center"
                    android:text="点击立即获取VIP会员特权"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    android:visibility="@{is_vip ? View.GONE : View.VISIBLE}"
                    app:layout_constraintTop_toBottomOf="@id/vip_agree" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/bg_color"
                    android:visibility="@{is_vip ? View.GONE : View.VISIBLE}"
                    app:layout_constraintTop_toBottomOf="@id/get_vip" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:background="@drawable/vip_bg05_img"
                    app:layout_constraintEnd_toEndOf="@id/t3"
                    app:layout_constraintStart_toStartOf="@id/t3"
                    app:layout_constraintTop_toTopOf="@id/t3" />

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_1"
                    android:text="VIP会员特权"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/privilege_recy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:overScrollMode="never"
                    android:paddingStart="@dimen/dp_14"
                    android:paddingEnd="@dimen/dp_14"
                    app:layout_constraintTop_toBottomOf="@id/t3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/xf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/shape_vip_price_bg_button"
            android:gravity="center"
            android:text="点击续费"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:visibility="@{is_vip ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>