<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/dp_15"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_top">


    <ImageView
        android:id="@+id/iv_zfb"
        android:layout_width="@dimen/dp_49"
        android:layout_height="@dimen/dp_49"
        android:layout_marginTop="@dimen/dp_36"
        android:background="@mipmap/ic_zxb"
        app:layout_constraintEnd_toStartOf="@+id/tv_phone"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_close_pop"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_size_36"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toEndOf="@+id/iv_zfb"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ce" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_zfb"
        app:layout_constraintTop_toBottomOf="@+id/tv_account"
        tools:text="csafafafae" />


    <TextView
        android:id="@+id/tv_withdraw_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="即将提现至你的支付宝账号"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_zfb" />


    <TextView
        android:id="@+id/tv_update_account"
        style="@style/CustomButton"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/bg_gray_radius25"
        android:text="修改账号"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_withdraw_tip"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/tv_withdraw"
        style="@style/CustomButton"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/bg_orange_radius25"
        android:text="确定"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_withdraw_tip"
        app:layout_constraintWidth_percent="0.4" />
</androidx.constraintlayout.widget.ConstraintLayout>