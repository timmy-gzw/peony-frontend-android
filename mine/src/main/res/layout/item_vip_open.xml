<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_15">


    <ImageView
        android:id="@+id/iv_vip_per"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintEnd_toStartOf="@+id/tv_tip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="#FFE4B2"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toTopOf="@+id/tv_tip"
        app:layout_constraintStart_toEndOf="@+id/iv_vip_per"
        app:layout_constraintTop_toTopOf="@+id/iv_vip_per"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="#928465"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/iv_vip_per"
        app:layout_constraintStart_toEndOf="@+id/iv_vip_per"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
