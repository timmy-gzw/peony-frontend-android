<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/dp_size_41"
    android:layout_marginEnd="@dimen/dp_size_41"
    android:minWidth="350dp">

    <LinearLayout
        android:id="@+id/fl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_black_tran30_radius6"
        android:paddingVertical="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_size_10"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginStart="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_tip"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginStart="@dimen/dp_4"
            android:layout_width="@dimen/dp_size_0_5"
            android:background="#B1B0B3"
            android:layout_height="@dimen/dp_size_25"/>

        <TextView
            android:layout_marginStart="@dimen/dp_10"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_size_2"
            android:textColor="#EEEEEE"
            android:textSize="@dimen/sp_12"
            tools:text="对方已通过真人～在近期使用Glide4.0+版本的时候,需要进行图片加载进度的监听,于是查找各种资料实现该功能,便有了这篇记录。 一、准备工作 笔者Glide为: 二、具体实现 大致思路:通..." />

    </LinearLayout>


</RelativeLayout>