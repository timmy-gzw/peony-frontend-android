<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/ll_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:minWidth="@dimen/dp_size_75"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nim_message_item_text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:autoLink="phone|email|web"
        android:gravity="end"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.1"
        android:maxWidth="@dimen/max_text_bubble_width"
        android:textColor="@color/color_black_b3000000"
        android:textSize="16sp"
        tools:background="@drawable/nim_message_item_left_selector"
        tools:text="企" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_3">

        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_size_18"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/bg_20half_tran"
            android:drawablePadding="@dimen/dp_size_3"
            android:paddingStart="@dimen/dp_size_3"
            android:paddingEnd="@dimen/dp_size_3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:drawableStartCompat="@drawable/nim_ic_chat_money"
            tools:text="0.5积分" />

        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@color/transparent"
            android:gravity="end"
            android:text="@string/readed"
            android:textColor="#666666"
            android:textSize="12sp"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>