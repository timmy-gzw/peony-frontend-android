<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/tool_bar" />

    <RelativeLayout
        android:id="@+id/rl_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_14"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_tool_bar">


        <com.netease.nim.uikit.common.ui.imageview.AvatarVipFrameView
            android:id="@+id/iv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_toEndOf="@+id/iv_avatar"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_18" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_arrow" />


    </RelativeLayout>

    <View
        android:id="@+id/vew1"
        style="@style/Driver"
        android:background="@color/driver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_avatar" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_19"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_19"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vew1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="置顶聊天"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_16"
            app:drawableEndCompat="@mipmap/ic_arrow"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_switch"
            android:checked="false"
            android:thumb="@android:color/transparent" />


    </RelativeLayout>

    <View
        android:id="@+id/vew2"
        style="@style/Driver"
        android:layout_marginStart="@dimen/dp_20"
        android:background="@color/driver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_top" />

    <TextView
        android:id="@+id/tv_bg_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_19"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_19"
        android:text="个性化设置"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_16"
        app:drawableEndCompat="@mipmap/ic_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vew2" />

    <View
        android:id="@+id/view2"
        style="@style/Driver"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/driver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bg_setting" />

    <TextView
        android:id="@+id/tv_clear_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_19"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_19"
        android:text="清空聊天记录"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_16"
        app:drawableEndCompat="@mipmap/ic_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2" />

    <View
        android:id="@+id/vie3"
        style="@style/Driver"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/driver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_clear_message" />

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_19"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_19"
        android:text="举报"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_16"
        app:drawableEndCompat="@mipmap/ic_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vie3" />

    <View
        android:id="@+id/view3"
        style="@style/Driver"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/driver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_report" />


    <com.tftechsz.common.widget.CommonItemView
        android:id="@+id/item_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:left_text_content="拉黑"
        app:right_arrow_visible="false"
        app:right_switch_visible="true"
        app:right_text_visible="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_color"
        android:paddingTop="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_black">

        <TextView
            android:id="@+id/tv_attention"
            style="@style/CustomButton"
            android:background="@drawable/bg_gray_shape"
            android:text="取消关注" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
