<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_group_couple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/dp_45"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:visibility="visible">


    <LinearLayout
        android:id="@+id/ll_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/ll_girl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <RelativeLayout
            android:layout_width="@dimen/dp_size_63"
            android:layout_height="@dimen/dp_size_78">

            <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                android:id="@+id/iv_from"
                android:layout_width="@dimen/dp_size_57"
                android:layout_height="@dimen/dp_size_57"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/iv_from_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/chat_bg_group_couple_head_boy" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="手可手"
            android:textColor="@color/blue_7F89F3"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@+id/rl_left" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ll_boy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <RelativeLayout
            android:layout_width="@dimen/dp_size_63"
            android:layout_height="@dimen/dp_size_78">

            <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                android:id="@+id/iv_to"
                android:layout_width="@dimen/dp_size_57"
                android:layout_height="@dimen/dp_size_57"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/iv_to_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/chat_bg_group_couple_head_girl" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="手鹅"
            android:textColor="@color/half_red"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@+id/rl_left" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_boy">


        <TextView
            android:id="@+id/tv_group_couple_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/chat_ic_group_couple_right"
            android:textColor="#C81150"
            android:textSize="@dimen/sp_14"
            app:drawableStartCompat="@mipmap/chat_ic_group_couple_left"
            tools:text="恭喜手可捣药恭喜手可捣药恭恭" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>