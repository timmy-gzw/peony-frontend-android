<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dp_30"
    android:layout_marginEnd="@dimen/dp_30"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/gradient_cor20_strtcolorffe5f1"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rel_header_pcm"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/img_close_pcm"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/peony_gb_icon2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_align_pcm2"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/peony_xxbg02_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_up_level"
            android:src="@mipmap/peony_xxbg01_icon3" />

        <TextView
            android:id="@+id/tv_up_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:text="亲密度"
            android:textColor="#ffff67be"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_align_pcm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_up_level"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:textColor="#ffff85ca"
            android:textSize="14sp" />


        <!-- 能滑动的部分 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_pcm"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/tv_align_pcm2"
            android:layout_marginTop="15dp"
            android:overScrollMode="never">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel_topalgin_tj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgalgin_qmdtj"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="-15dp"
                    android:layout_marginEnd="@dimen/dp_12">
                    <!-- 这里嵌套多了 因为要两个 border 的-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_intimacy_context_bg"
                        android:paddingBottom="8dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/algintv_qmdtj1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="22dp"
                            android:textColor="#ff999999"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/algintv_qmdtj1"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_ffeef4_radius8">

                            <TextView
                                android:id="@+id/tv_algin_pcm_txt_rhrqmdjks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@drawable/bg_fff_radius10"
                                android:paddingLeft="9dp"
                                android:paddingTop="3dp"
                                android:paddingEnd="9dp"
                                android:paddingBottom="3dp"
                                android:text="如何让亲密度加快升温？"
                                android:textColor="#ff886471"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_algin_pcm_txt_rhrqmdjks"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_15"
                                android:layout_marginEnd="@dimen/dp_15"
                                android:layout_marginBottom="@dimen/dp_18"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableTop="@mipmap/peony_sw01_icon"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_horizontal"
                                    android:text="聊天互动"
                                    android:textColor="#ffc2b5ba"
                                    android:textSize="10sp" />


                                <TextView
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableTop="@mipmap/peony_sw02_icon"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_horizontal"
                                    android:text="语音聊天"
                                    android:textColor="#ffc2b5ba"
                                    android:textSize="10sp" />

                                <TextView
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableTop="@mipmap/peony_sw03_icon"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_horizontal"
                                    android:text="视频聊天"
                                    android:textColor="#ffc2b5ba"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_sex_pcm"
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableTop="@mipmap/peony_sw04_icon"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_horizontal"
                                    android:text="送她礼物"
                                    android:textColor="#ffc2b5ba"
                                    android:textSize="10sp" />

                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_topalgin_jl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rel_topalgin_tj"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/shape_intimacy_context_bg"
                    android:paddingBottom="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/imgalgin_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/peony_qxjl_icon" />

                    <TextView
                        android:id="@+id/tv_algin_pop3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgalgin_3"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/chat_intimacy_text"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />


                    <LinearLayout
                        android:id="@+id/rv_award"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_algin_pop3"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_topalgin_jl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rel_topalgin_jl"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/shape_intimacy_context_bg"
                    android:paddingBottom="@dimen/dp_10">


                    <TextView
                        android:id="@+id/tv_algin_pop31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/chat_intimacy_text"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />


                    <RelativeLayout
                        android:id="@+id/rel_root_iia2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_algin_pop31"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/img_iianew"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:src="@mipmap/peony_wjs_icon" />

                        <TextView
                            android:id="@+id/tv_iia_namenew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_toEndOf="@id/img_iianew"
                            android:textColor="#ff886471"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/tv_iia_tipnew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_iia_namenew"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_toEndOf="@id/img_iianew"
                            android:background="@null"
                            android:clickable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textColor="#ffc2b5ba"
                            android:textSize="12sp" />

                    </RelativeLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgalgin_qmdtj"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerHorizontal="true"

                    android:src="@mipmap/peony_qmtj_icon" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_header_pcm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/fl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="@dimen/dp_46"
                android:layout_height="77dp"
                android:background="@mipmap/chat_ic_girl_red"
                android:scaleType="fitXY" />

            <com.tftechsz.common.widget.CircleImageView
                android:id="@+id/iv_to"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_toEndOf="@id/iv_1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_share_qq"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/dp_2" />


            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-30dp"
                android:layout_toEndOf="@+id/iv_from"
                android:background="@mipmap/chat_ic_boy_blue" />

            <com.tftechsz.common.widget.CircleImageView
                android:id="@+id/iv_from"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_toEndOf="@id/iv_to"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_share_qq"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/dp_2" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_algin_pcm_ablow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fl_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-32dp"
            android:src="@mipmap/peony_ax_icon" />

        <TextView
            android:id="@+id/tv_pcm_clstexttop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_algin_pcm_ablow10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-7dp"
            android:background="@drawable/shape_intimacy_clas_imgtop"
            android:paddingStart="9dp"
            android:paddingTop="3dp"
            android:paddingEnd="9dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
