<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tftechsz.peony">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name="com.tftechsz.peony.SophixStubApplication"
        android:icon="${app_icon}"
        android:label="${app_label}"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:largeHeap="true"
        tools:replace="android:label">
        <!--   workManager lazy init     -->
        <provider
            android:name="androidx.work.impl.WorkManagerInitializer"
            android:authorities="${applicationId}.workmanager-init"
            tools:node="remove" />

        <meta-data
            android:name="com.taobao.android.hotfix.IDSECRET"
            android:value="${hotfixKey}" />
        <meta-data
            android:name="com.taobao.android.hotfix.APPSECRET"
            android:value="${hotfixSecret}" />
        <meta-data
            android:name="com.taobao.android.hotfix.RSASECRET"
            android:value="${hotfixRsa}" />

        <meta-data
            android:name="BUGLY_APPKEY"
            android:value="${buglyKey}" />

        <activity
            android:name="com.tftechsz.peony.SplashActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:icon="${app_icon}"
            android:enabled="true"
            android:theme="@style/SplashTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="tftechsz" android:host="peony.com" />
            </intent-filter>
        </activity>

        <!-- 动态替换logo-->
        <activity-alias
            android:name="com.tftechsz.peony.SplashActivity1"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher"
            android:targetActivity="com.tftechsz.peony.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER" />
            </intent-filter>
        </activity-alias>


        <activity
            android:name="com.tftechsz.peony.wxapi.WXEntryActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:taskAffinity="com.tftechsz.peony"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.tftechsz.peony.wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="design_width_in_dp"
            android:value="376" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="760" />
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />

        <meta-data
          android:name="UMENG_PUSH_SECRET"
          android:value="624dfb919be15a65eeafafcf17bbc546" />

        <meta-data
            android:name="APPLOG_URL_SCHEME"
            android:value="${APPLOG_SCHEME}" />

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="${UMENG_APPKEY}" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}" />
        <meta-data
            android:name="APPLOG_URL_SCHEME"
            android:value="${APPLOG_SCHEME}" />
        <meta-data
            android:name="YUNXIN_APP_ID"
            android:value="${YUNXIN_APP_ID}" />
        <meta-data
            android:name="app_label"
            android:value="${app_label}" />
        <meta-data
            android:name="app_name"
            android:value="${app_name}" />
        <meta-data
            android:name="CUSTOMER_SERVICE_VALUE"
            android:value="${CUSTOMER_SERVICE_VALUE}" />
        <meta-data
            android:name="ACTIVITY_NOTICE"
            android:value="${ACTIVITY_NOTICE}" />
        <!--百度地图-->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="${BAIDU_APPKEY}" />
        <meta-data
            android:name="com.netease.nim.appKey"
            android:value="${YUNXIN_APP_ID}" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />

        <meta-data
            android:name="com.vivo.push.api_key"
            android:value="${VIVO_APP_KEY}" />
        <meta-data
            android:name="com.vivo.push.app_id"
            android:value="${VIVO_APP_ID}" />

        <!--适配华为（huawei）刘海屏-->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />
        <!--适配小米（xiaomi）刘海屏-->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />
    </application>

</manifest>
