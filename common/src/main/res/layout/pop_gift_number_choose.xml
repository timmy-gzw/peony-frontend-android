<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/bg_gray"
            android:gravity="center_vertical"
            android:hint="请输入打赏数量，最多9999"
            android:maxLength="4"
            android:paddingStart="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_2"
            android:textColor="@color/color_normal"
            android:textColorHint="@color/color_cc"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/bg_orange_radius6"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_keyBord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D4D8DD"
        android:paddingStart="@dimen/dp_6"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_sure" />


</androidx.constraintlayout.widget.ConstraintLayout>