<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_20">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_first_recharge"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@mipmap/bg_first_recharge"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_first_recharge"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_first_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/ic_close_pop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_first_recharge">

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="金币充值"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_recharge_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币余额不足，马上充值别错过缘分～"
            android:textColor="@color/color_cc"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recharge" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@mipmap/ic_close_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recharge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_19"
        app:layout_constraintEnd_toStartOf="@+id/tv_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_normal" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_84"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/bg_gray_radius"
        android:gravity="center"
        android:text="更\n多"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_normal" />


    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="充值即表示同意用户充值协议"
        android:textColor="@color/color_light_font"
        android:textSize="@dimen/sp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_recharge" />

    <TextView
        android:id="@+id/pay_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_pay_hint_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/tv_pay"
        app:layout_constraintStart_toStartOf="@id/tv_pay"
        app:layout_constraintTop_toBottomOf="@+id/tv_contact"
        tools:text="首充送2小时至尊VIP会员，私聊5折起"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_pay"
        style="@style/CustomButton"
        android:layout_width="@dimen/dp_230"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/bg_orange_radius25"
        android:text="立即充值"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pay_hint"
        app:layout_goneMarginEnd="@dimen/dp_15"
        tools:background="@drawable/shape_pay_btn_bg" />

    <LinearLayout
        android:id="@+id/ll_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@drawable/bg_gray_radius15"
        android:gravity="center"
        android:paddingStart="@dimen/dp_3"
        android:paddingTop="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@id/tv_pay"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chat_ic_gift_coin" />

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:text="10金币"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_3"
        android:text="余额"
        android:textColor="@color/color_normal"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toTopOf="@id/ll_coin"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>