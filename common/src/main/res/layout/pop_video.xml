<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:paddingBottom="@dimen/dp_10">


    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pop_pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_5"
            android:text="语音/视频通话"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_face_off"
            android:layout_width="114dp"
            android:layout_height="@dimen/dp_36"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="@dimen/dp_7"
            android:layout_marginBottom="-15dp"
            android:layout_toEndOf="@+id/tv_video"
            android:src="@mipmap/ic_face_off_tip" />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_face_off"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="视频通话 (80金币每分钟)"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_17" />

        <View
            android:id="@+id/view"
            style="@style/Driver"
            android:layout_below="@+id/tv_video"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@color/driver"

            />

        <TextView
            android:id="@+id/tv_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="语音通话 (30金币每分钟)"
            android:textColor="@color/color_normal"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>


</RelativeLayout>