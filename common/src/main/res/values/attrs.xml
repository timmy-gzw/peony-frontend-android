        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>
    <declare-styleable name="AlignTextView">
        <attr name="align" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="GiftItemLayout">
        <attr name="gift_index" format="integer" />
    </declare-styleable>

    <declare-styleable name="ScrollTextView">
        <attr name="clickEnable" format="boolean" />
        <attr name="isHorizontal" format="boolean" />
        <attr name="speed" format="integer" />
        <attr name="text" format="string" />
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="times" format="integer" />
        <attr name="isScrollForever" format="boolean" />
    </declare-styleable>


    <string-array name="host_name">
        <item>正式环境</item>
        <item>预发布环境</item>
        <item>提测环境</item>
        <item>测试稳定版本</item>
