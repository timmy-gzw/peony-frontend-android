    </declare-styleable>
    <declare-styleable name="NineGridLayout">
        <attr name="sapcing" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CommonItemView">
        <!--右边文字是否可见-->
        <attr name="right_text_visible" format="boolean" />
        <attr name="center_text_visible" format="boolean" />
        <!--右边箭头是否可见-->
        <attr name="right_arrow_visible" format="boolean" />
        <!--右边开关是否可见-->
        <attr name="right_switch_visible" format="boolean" />
        <!--开关是否打开-->
        <attr name="right_switch_open" format="boolean" />
        <!--左边文字颜色-->
        <attr name="left_text_color" format="color" />
        <!--左边文字内容-->
        <attr name="left_text_content" format="string" />
        <!--右边文字内容-->
        <attr name="right_text_content" format="string" />
        <attr name="center_text_content" format="string" />
        <attr name="view_visible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CommonFrameView">
